# Autostart applications
exec --no-startup-id nitrogen --restore; sleep 1
exec xautolock -time 10 -locker "/usr/local/bin/i3lock-fancy"
# dual screen
exec xrandr --output HDMI-0 --auto --left-of eDP-1-1
exec xrandr --output eDP-1-1 --primary
# horizontal scroll
exec synclient HorizEdgeScroll=1
exec synclient HorizTwoFingerScroll=1
# enable Verr Num by default
exec /usr/bin/numlockx on

