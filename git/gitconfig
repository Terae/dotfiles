[color]
	advice = true
	branch = true
	diff = true
	grep = true
	interactive = true
	pager = true
	push = true
	showBranch = true
	status = true
	transport = true
	ui = true

[color "branch"]
	current = green

[color "diff"]
	new = green
	old = red

	newMoved = cyan
	oldMoved = blue

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	commitGraph = true

[diff]
	algorithm = histogram
	tool = vimdiff
	colorMoved = default
	renames = copy
	mnemonicPrefix = true
	wsErrorHighlight = all

[grep]
	lineNumber = true

[push]
	default = simple
	followTags = true

[pull]
	rebase = interactive

[rebase]
	missingCommitsCheck = warn
	autostash = true
	stat = true

[fetch]
	prune = true

[log]
	date = local
	abbrevCommit = true
	decorate = short
	showRoot = true
	mailmap = true

[branch]
	autoSetupMerge = true
	autoSetupRebase = always

[column]
	ui = auto,column

[status]
	branch = true
	showStash = true
	submoduleSummary = true

[alias]
	co = checkout
	clone = clone --recursive
	count = shortlog -sn
	su = submodule update --init --recursive
	# Undo the last commit
	undo = reset --soft HEAD^
	active-branch = rev-parse --abbrev-ref HEAD
	up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
	amend = commit --amend -C HEAD
	# Show the diff of everything you haven't pushed yet
	unpushed = "!f() { \
		branch=$(git active-branch); \
		git diff origin/$branch..HEAD; \
	}; f"

	retag = "!f() { \
		git tag -d "$1" &> /dev/null; \
		git tag $1; \
	}; f"

	stash-current-dir = "!f() { \
		echo see cpc.cx/mFV; \
	}; f"

	which = branch --contains
	who = shortlog --summary --numbered --no-merges
	whoami = !"git config --get user.name && git config --get user.email"
	ours   = !git checkout --ours $@ && git add $@
	theirs = !git checkout --theirs $@ && git add $@

[github]
	user = Terae

[url "git@github.com:"]
	insteadOf = @gh:

[web]
	browser = firefox

[svn]
	rmdir = true

