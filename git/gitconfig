[user]
	email = bigey@etud.insa-toulouse.fr
	name = Terae
	signingkey = 95EE4C5E3974AC05

[color]
	ui = true
[color "branch"]
	current = green
[color "diff"]
	new = green
	old = red

	newMoved = cyan
	oldMoved = blue
[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[push]
	default = simple
	followTags = true

[pull]
	rebase = true

[rebase]
	autostash = true

[log]
	date = local

[alias]
	co = checkout
	clone = clone --recursive
	count = shortlog -sn
	su = submodule update --init --recursive
	# Undo the last commit
	undo = reset --soft HEAD^
	active-branch = rev-parse --abbrev-ref HEAD
	up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
	amend = commit --amend -C HEAD
	# Show the diff of everything you haven't pushed yet
	unpushed = "!f() { \
		branch=$(git active-branch); \
		git diff origin/$branch..HEAD; \
	}; f"

	retag = "!f() { \
		git tag -d "$1" &> /dev/null; \
		git tag $1; \
	}; f"

	stash-current-dir = "!f() { \
		echo see cpc.cx/mFV; \
	}; f"

[github]
	user = Terae

